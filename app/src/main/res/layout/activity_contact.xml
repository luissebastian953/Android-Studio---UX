<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/lighterBlue1"/>

    <TextView
        android:id="@+id/tv_title_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Follow us here" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/contact_pager_carousel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/tv_title_contact"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/card_white"
        android:elevation="4dp">

    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:padding="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_google_blue"
            android:background="@drawable/card_white_2"
            android:layout_marginRight="15dp"
            android:elevation="5dp"/>
        <ImageButton
            android:padding="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_facebook_blue"
            android:background="@drawable/card_white_2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="5dp"/>
        <ImageButton
            android:padding="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_twitter_blue"
            android:background="@drawable/card_white_2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="5dp"/>
        <ImageButton
            android:padding="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_instagram_blue"
            android:background="@drawable/card_white_2"
            android:layout_marginLeft="15dp"
            android:elevation="5dp"/>
    </LinearLayout>

</RelativeLayout>